<h2>File Upload</h2>

<%= form_tag '/upload', multipart: true, :class => "form-horizontal" do %>
  <label for="file">
    Select File
  </label> 

  <%= file_field_tag "datafile" %>

  <div class="form-group">
    <div class="col-sm-offset-0 col-sm-5">
      <%= submit_tag 'Upload', class: 'btn btn-primary'%>
    </div>
  </div>
<% end %>